<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>CloudBeesTutorial</display-name>

    <servlet>
      <servlet-name>JDBCServlet</servlet-name>
      <servlet-class>com.cloudbees.servlet.JDBCServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>JDBCServlet</servlet-name>
      <url-pattern>/JDBCServlet</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>
          30
      </session-timeout>
    </session-config>

    <welcome-file-list>
      <welcome-file>JDBCServlet</welcome-file>
    </welcome-file-list>

    <resource-ref>
      <res-ref-name>jdbc/countries</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
